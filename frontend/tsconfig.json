{
  "files": [],
  "references": [{ "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@atoms/*": ["src/core/ui/atoms/*"],
      "@molecules/*": ["src/core/ui/molecules/*"],
      "@features/*": ["src/features/*"],
      "@templates/*": ["src/core/ui/templates/*"],
      "@/*": ["src/*"],
      "@happy-box/*": ["src/app/happy-box/*"]
    }
  },
  "include": ["src", "tailwind.config.ts", "alltypes.d.ts"]
}
